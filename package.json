{
  "name": "@nzws/cli",
  "version": "1.0.0",
  "author": "Yuzuki Aida <dev@nzws.me>",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "packageManager": "yarn@3.6.0",
  "license": "MIT",
  "repository": "https://github.com/nzws/cli.git",
  "homepage": "https://github.com/nzws/cli",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint:prettier": "prettier --cache --check --ignore-path .gitignore .",
    "lint:eslint": "eslint --cache --ignore-path .gitignore --ext .ts .",
    "lint:tsc": "tsc --noEmit",
    "lint": "yarn lint:prettier && yarn lint:eslint && yarn lint:tsc",
    "format:prettier": "prettier --cache --write --ignore-path .gitignore .",
    "format:js": "eslint --cache --fix --ignore-path .gitignore --ext .ts .",
    "format": "yarn format:prettier && yarn format:js",
    "build": "tsc",
    "start:multi": "yarn build && node example/multi/bin/multi-cli.js",
    "start:single": "yarn build && node example/single/bin/single-cli.js",
    "test": "echo 'todo'"
  },
  "devDependencies": {
    "@nzws/eslint-config": "2.1.0",
    "@nzws/prettier-config": "2.0.0",
    "@tsconfig/node20": "1.0.1",
    "@types/node": "20.3.1",
    "eslint": "8.43.0",
    "prettier": "2.8.8",
    "typescript": "5.1.3"
  },
  "files": [
    "build/*"
  ],
  "prettier": "@nzws/prettier-config",
  "eslintConfig": {
    "extends": "@nzws/eslint-config/typescript-nodejs"
  }
}
